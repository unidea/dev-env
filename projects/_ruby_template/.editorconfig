# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[{Capfile,Gemfile,Rakefile}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{html,xml,erb}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{js,json,jbuilder}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{css,scss}]
charset = utf-8
indent_style = space
indent_size = 4

[*.{rb,rake,yml}]
charset = utf-8
indent_style = space
indent_size = 2
